body 
    background-color: #f6f6f6
    margin 0px
    font-size: 14px
    background-image: url('https://cdn.forbes.com.mx/2014/12/mascotas.gif')
    background-repeat: no-repeat
    background-size: cover

.height-icon
    height: 40px
.box
    background-color: #fff
    border-radius: 8px
    border 1px solid #d6d6d6
    position: absolute
    width: 500px
    margin: 0px auto
    .btn-success
        width: 100%
        background-color: #3176BF
        border 0px
    .form-control   
            &:focus
            &:active    
                outline none
                box-shadow none   
    .inside
        padding 16px
    .header
            background-color #00acff
            border-radius: 8px 8px 0px 0px
            padding 16px
            a
                img
                    width 100%
                    display: block
                    margin: 0px auto
    .footer
        text-align: center
        a
            display inline-block
            font-size .8em
.mtop16
    margin-top: 16px

.center
    margin-left: 175px

.box_login
    top calc(30% - 113px)
    left calc(50% - 250px)